<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_architectire_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通版本"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_architectire_mvp_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通MVP"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_architectire_mvp_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="项目中的MVP"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btn_architectire_mvp_databinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MVP DataBinding"
        android:textAllCaps="false"
        />

</LinearLayout>
